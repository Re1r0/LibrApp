                        <Insets left="10.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
         </children>
      </VBox>
      <CheckBox fx:id="detailsCheckBox" layoutX="444.0" layoutY="247.0" mnemonicParsing="false" onAction="#detailsAction" text="Details">
